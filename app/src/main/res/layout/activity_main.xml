<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6D7DA"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/header"
        android:layout_width="259dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Тест"
        android:textColor="#23476E"
        android:textSize="19sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qestion1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="1.Как звали Пушкина?"
        android:textSize="20sp"
        android:textStyle="italic"
        android:background="#D7EFE8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <EditText
        android:id="@+id/answer1"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:textSize="20sp"
        android:textStyle="italic"
        android:background="#89CBDC"
        android:inputType="textMultiLine"
        android:hint="Введите ответ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qestion1" />

    <TextView
        android:id="@+id/qestion2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="2.Сколько будет 2+2?"
        android:textSize="20sp"
        android:textStyle="italic"
        android:background="#D7EFE8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer1" />

    <EditText
        android:id="@+id/answer2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:textSize="20sp"
        android:textStyle="italic"
        android:background="#89CBDC"
        android:inputType="textMultiLine"
        android:hint="Введите ответ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qestion2" />

    <TextView
        android:id="@+id/qestion3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="3.Кто крестил Русь?"
        android:textSize="20sp"
        android:textStyle="italic"
        android:background="#D7EFE8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer2" />

    <EditText
        android:id="@+id/answer3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:textSize="20sp"
        android:textStyle="italic"
        android:background="#89CBDC"
        android:inputType="textMultiLine"
        android:hint="Введите ответ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qestion3" />

    <Button
        android:id="@+id/button"
        android:layout_width="294dp"
        android:layout_height="82dp"
        android:layout_marginTop="60dp"
        android:text="Проверить"
        android:backgroundTint="#4874E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer3" />


</androidx.constraintlayout.widget.ConstraintLayout>